<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="./css/style.css">
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>

    <title>JOGO</title>
</head>
<body class="blue-text text-darken-2 #bdbdbd grey lighten-1">
    <div class="container center">
        <h1 class="purple-text">JOKER EM P√î </h1>
        <div class="row ">
            <h3 class="left green-text" >PLAYER 1:</h3>
            
            <h3 class="right red-text">PLAYER 2:</h3>

            <h3 class="center" >RODADA: </h3>

        </div>        
        <div class="row">
          <h3 class="pontos1 left" >?</h3>
          <h3 class="pontos2 right" >?</h3>
          <h3 class="rodadas" class="center">üòé</h3>
        </div>
        <div class="row ">
            <div class="col s4 left"> <img id="papel" class="img" src="data:image/jpeg;base64,"  style="width: 150px; height: 150px; margin: 0px;"> </div>
            <div class="col s4 center"> <img id="pedra" class="img" src="https://pbs.twimg.com/media/FUklwvZWIAMpD1u?format=png&name=small"   style="width: 150px; height: 150px; margin: 0px;"> </div>
            <div class="col s4 right"> <img id="tesoura" class="img" src="https://boutin.vteximg.com.br/arquivos/ids/155724-1000-1000/Tesoura-de-Poda-Okatsune-103-200mm-c-2-Molas-REF-103C-G.jpg?v=637058866272930000"  style="width: 150px; height: 150px; margin: 0px;"> </div>
        </div>
        <h1>O VENCEDOR √â:</h1>
        <h1 class="vencedor">üòÅ </h1>
        <a id="botao" class="waves-effect waves-light btn #448aff blue accent-2">DE NOVO</a>
    </div>
    <script src="./js/socket.io.js"></script>
    <script>
      var socket=io();
      var id;
      var jokempo='';
      var jogadaplayer1='';
      var jogadaplayer2='';

      socket.on('verificar',(permitido)=>{
        if(!permitido){
          $('.row').addClass('avoid-clicks');
        }
      });
      socket.on('user',(player)=>{
        console.log('jogador',player)
        id=player;
      });
      $('.img').click(function joga(){
        jokempo=$(this).attr('id');
        console.log(jokempo);
        if(id==1){
          jogadaplayer1=jokempo;
          socket.emit('jogada1',jogadaplayer1);
          console.log('jogado index p1', jogadaplayer1);
        }
        else{
          jogadaplayer2=jokempo;
          socket.emit('jogada2',jogadaplayer2);
        }
        $('.row').addClass('avoid-clicks');
      });
      socket.on('vencedor',function (vencedor){
      //console.log(vencedor);
      $('.vencedor').html(vencedor);
      
      });
      socket.on('rodadas', function(rodadas){
      $('.rodadas').html(rodadas);
      });

      $('#botao').click(function reset(){
        $('.row').removeClass('avoid-clicks');
        $('.vencedor').html('üòÇ');
        var reset = 1;
        socket.emit('reset',reset);
      });
      socket.on('resetado',function resetado(resetado){
        $('.row').removeClass('avoid-clicks');
        $('.vencedor').html('üòÇ');
      })
      socket.on('pontos1', function(pontosUm){
        $('.pontos1').html(pontosUm);
      });
      socket.on('pontos2', function(pontosDois){
        $('.pontos2').html(pontosDois);
      });
    </script>

</body>
</html>